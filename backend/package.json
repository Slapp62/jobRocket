{
  "name": "backend",
  "version": "1.0.0",
  "description": "node/express backend",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:cards": "cross-env NODE_ENV=test jest tests/cards --detectOpenHandles",
    "test:users": "cross-env NODE_ENV=test jest tests/users --detectOpenHandles",
    "test:my-cards": "cross-env NODE_ENV=test jest tests/cards/getMyCards.test.js --detectOpenHandles",
    "test:create-card": "cross-env NODE_ENV=test jest tests/cards/createCard.test.js --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch --detectOpenHandles",
    "build": "npm install && cd ../frontend && npm install && npm run build && cd ../backend && node scripts/copy-build.js",
    "start": "node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "prettier:write": "prettier --write \"**/*.{js,json,md}\"",
    "prettier:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "chalk": "^4.1.2",
    "cloudinary": "^2.8.0",
    "config": "^4.1.1",
    "connect-mongo": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "mongoose": "^8.16.2",
    "morgan": "^1.10.1",
    "morgan-body": "^2.6.9",
    "multer": "^2.0.2",
    "openai": "^6.8.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "streamifier": "^0.1.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/mongoose": "^5.11.96",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 10000
